{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Schema with If Only",
  "type": "object",
  "description": "A schema with if but no then or else (should be ignored per spec).",
  "properties": {
    "name": {
      "type": "string",
      "description": "Person's name"
    },
    "email": {
      "type": "string",
      "description": "Email address"
    }
  },
  "if": {
    "properties": {
      "name": {
        "type": "string"
      }
    }
  }
}
